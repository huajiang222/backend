datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               Int               @id @default(autoincrement())
  username         String            @unique                // 用户名
  password         String                                   // 用户密码
  points           Int               @default(0)            // 游戏点数
  phone            String?                                  // 电话号码
  fullName         String?                                  // 真实姓名
  withdrawPwd      String?                                  // 取款密码
  bankName         String?                                  // 取款银行信息名称（可删除，已用新表替代）
  bankAccountName  String?                                  // 取款账户名（可删除，已用新表替代）
  bankAccount      String?                                  // 取款账号（可删除，已用新表替代）
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt @default(now())
  withdrawMethods  WithdrawMethod[]                         // 关联收款方式
}

model WithdrawMethod {
  id            Int      @id @default(autoincrement())
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
  bankName      String
  accountName   String
  accountNumber String
  createdAt     DateTime @default(now())
}